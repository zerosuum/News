<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Headline -->
    <style name="NYT_Headline">
        <item name="android:fontFamily">serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Meta -->
    <style name="NYT_Meta">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Subjudul -->
    <style name="NYT_Subtitle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Paragraf -->
    <style name="NYT_Body">
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:lineSpacingExtra">8dp</item>
        <item name="android:hyphenationFrequency">full</item>
        <item name="android:justificationMode">inter_word</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- TextButton utk tombol Prev/Next -->
    <style name="Widget.News.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="Widget.Custom.TonalButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/teal_200</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


</resources>
